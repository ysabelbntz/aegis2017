    <div class="col-xs-12">
      <h3 class="center-align">Accounts</h3>
      <h4 class="center-align">Number of accounts: <span class="text-bold"><%=@account_number %></span>/<%= Student.count %></h4>
      <h4 class="center-align"><%= flash[:notice] %></h4>
    </div>
