          <th>Email</th>
          <th class="right-align">Year</th>
          <th>Course</th>
          <th>School</th>
          <th>Writeup</th>
          <th></th>
        </tr>
        <% @accounts.each do |student| %> 
          <tr>
            <td class="right-align"><%= student.student_id %></td>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td class="right-align"><%= student.yr %></td>
            <td><%= student.course %></td>
            <td><%= student.school %></td>
            <td style="white-space: pre-line;"><%= student.writeup %></td>
            <td><%= link_to "Delete", destroy_account_path(student), method: :delete, data: { confirm: "Are you sure you want to delete the account #{student.student_id}?" }, :class => "event-crud" %></td>
